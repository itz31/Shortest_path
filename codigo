#include <iostream>
#include <fstream>
#include <vector>
#include <sstream>

using namespace std; 

/*Vamos a leer el archivo para crear la matriz*/
vector<vector<int>> readFile (string filee){
    ifstream file(filee);
    if(!file){
        cout << "No se encontrÃ³ el archivo \n";
        return {}; 
    }

    int size; 
    string line; 
    getline(file, line); 

    stringstream convertir(line); 
    convertir >> size;

    vector<vector<int>> matrix(size, vector<int>(size));

    for (int i = 0; i < size; i++) {
        getline(file, line); 
        stringstream lineS(line); 
        string n; 

        for (int j = 0; j < size; j++) {
            getline(lineS,n, ',' );
            matrix [i][j]= stoi(n);
        }
    }

    return matrix;
}

int main(){

    string file= "texto.txt"; 
    vector<vector<int>> matrix= readFile(file); 

    for (const auto& row : matrix) {
        for (int val : row) {
            cout << val << " ";
        }
        cout << endl;
    }

    return 0;
}

